@model EcommerceWeb.ViewModels.RegisterVM
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container-fluid py-5">
    <div class="container py-5">
        <h1 class="mb-4">Đăng ký</h1>
        @* Định nghĩa enctype="multipart/form-data" khi có lưu hình ảnh *@
        <form asp-action="DangKyForm" asp-controller="KhachHang" enctype="multipart/form-data">
            <div class="row g-5">
                <div class="col-md-12 col-lg-12 col-xl-12">
                    <div class="row">
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.MaKh" class="form-label my-3"></label><sup style="color: red;">*</sup>
                                <input asp-for="@Model.MaKh" type="text" class="form-control">
                                <span asp-validation-for="@Model.MaKh" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-lg-6">
                            <div class="form-item w-100">
                                <label asp-for="@Model.MatKhau" class="form-label my-3"></label><sup style="color: red;">*</sup>
                                <input asp-for="@Model.MatKhau" type="password" class="form-control">
                                <span asp-validation-for="@Model.MatKhau" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-item">
                            <label asp-for="@Model.HoTen" class="form-label my-3"></label><sup style="color: red;">*</sup>
                            <input asp-for="@Model.HoTen" type="text" class="form-control">
                            <span asp-validation-for="@Model.HoTen" class="text-danger"></span>
                        </div>
                        <div class="form-item mt-3">
                            <label asp-for="@Model.GioiTinh" class="form-label"></label> &nbsp;
                            <input asp-for="@Model.GioiTinh" id="Nam" type="radio" value="0" />
                            <label for="Nam">Nam</label>
                            <input asp-for="@Model.GioiTinh" id="Nữ" type="radio" value="1" />
                            <label for="Nữ">Nữ</label>
                        </div>
                        <div class="form-item col-lg-6">
                            <label asp-for="@Model.NgaySinh" class="form-label mb-3"></label>
                            <input asp-for="@Model.NgaySinh" type="date" class="form-control">
                        </div>
                        <div class="form-item">
                            <label asp-for="@Model.DiaChi" class="form-label my-3"></label><sup style="color: red;">*</sup>
                            <input asp-for="@Model.DiaChi" type="text" class="form-control">
                            <span asp-validation-for="@Model.DiaChi" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label asp-for="@Model.DienThoai" class="form-label my-3"></label><sup style="color: red;">*</sup>
                            <input asp-for="@Model.DienThoai" type="text" class="form-control">
                            <span asp-validation-for="@Model.DienThoai" class="text-danger"></span>
                        </div>
                        <div class="form-item">
                            <label asp-for="@Model.Email" class="form-label my-3"></label>
                            <input asp-for="@Model.Email" type="text" class="form-control">
                            <span asp-validation-for="@Model.Email" class="text-danger"></span>
                        </div>
                        <div class="form-item col-lg-6">
                            <label class="form-label my-3">Hình ảnh</label>
                            <input type="file" name="HinhAnh" class="form-control" style="width: fit-content;">
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn border-secondary py-2 px-4 text-uppercase text-primary mt-3">Sign Up</button>
        </form>
    </div>
</div>

